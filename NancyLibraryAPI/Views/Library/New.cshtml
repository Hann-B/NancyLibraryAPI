@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<NancyLibraryAPI.Models.Book>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>


    <div class="row">
        <div class="col-md-12">
            <form action="/new" method="post" class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        <label for="title">Title</label>
                        <input name="Title" value="@Model.Title" type="text" class="form-control" placeholder="Title">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label for="author">Author</label>
                        <input name="Author" value="@Model.Author" type="text" class="form-control" placeholder="Author">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label for="genre">Genre</label>
                        <input name="Genre" value="@Model.Genre" type="text" class="form-control" placeholder="Genre">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label for="yearPublished">Year Published</label>
                        <input name="YearPublished" value="@Model.YearPublished" type="text" class="form-control" placeholder="Year Published">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <button class="btn btn-primary">Save</button>
                    </div>
                </div>                         
                </form>
            </div>
        </div>
</body>
</html>
